<h1>AuthomorphNumbers#input</h1>
<p>Find me in app/views/authomorph_numbers/input.html.erb</p>
<%= form_tag("view.html", remote: true, :method => "get", id: 'n-input-form') do %>
    <%= label_tag("Enter N") %> <br/>
    <%= text_field_tag(:n) %> <br/>
    <%= radio_button_tag('format', 'html', true) %>
    <%= label_tag('format_html', 'SSR') %> <br/>
    <%= radio_button_tag('format', 'xml') %> 
    <%= label_tag('format_xml', 'CSR') %> <br/>
    <%= submit_tag("Calc result", id: 'submit-button') %>
<% end %> 
<div id="results"></div>